<script>
    var lista = <%- JSON.stringify(data) %>;
    var tablaAnotacion = null;
    $(document).ready(function(){
        tablaAnotacion = $('#tablaAnotaciones').DataTable({
            pageLength: 25,
            responsive: true,
            dom: '<"html5buttons"B>lTfgitp',
            processing: true,
            serverSide: false,
            columns: [
                {"data": "descripcion_anotacion"},
                {"data": "fecha_anotacion"},
                {"data": "fin_periodo_anotacion"},
                {"data": "fecha_acto_sexual_anotacion"},
                {"data": "peso_actual_anotacion"},
                {
                "data": "",
                "render": (data, type, row) => {
                    if (row.estado_animo_anotacion === 'sad') { 
                        return `<label for="sad" style="display:flex;justify-content:center;font-size:55px;">&#128532;</label>`;
                    } else if (row.estado_animo_anotacion === 'regular') {
                        return '<label for="regular" style="display:flex;justify-content:center;font-size:55px;">&#128528;</label>'
                    } else if (row.estado_animo_anotacion === 'happy') {
                        return '<label for="happy" style="display:flex;justify-content:center;font-size:55px;">&#128512;</label>'
                    }
                }
            },
            ],
            buttons: [
                {
                    extend: 'print',
                    customize: function (win){
                        $(win.document.body).addClass('white-bg');
                        $(win.document.body).css('font-size', '10px');

                        $(win.document.body).find('table')
                                .addClass('compact')
                                .css('font-size', 'inherit');
                    }
                }
            ],
        });
        tablaAnotacion.rows.add(lista);
        tablaAnotacion.draw();
    });
</script>

